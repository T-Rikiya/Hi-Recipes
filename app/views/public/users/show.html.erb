<div class="container">
  <h1><%=@user.name %>さんのユーザー情報</h1>
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th>ユーザー名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-6 px-sm-0 offset-sm-1">
      <% unless current_member.guest_member? %>
        <%= link_to "編集する", edit_user_path(@user.id), class:"btn btn-success my-1 mx-4 px-4" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h2>いいね一覧</h2>
    <div class="col">
      <table class="table">
        <% @recipe.favorites.each do |favorite| %>
          <tr>
            <td></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  
  

