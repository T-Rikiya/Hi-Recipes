<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @user.name%>さんのユーザー情報編集</h2>
    </div>
  </div>
  <%= form_with model: @user, url:user_path, local:true do |f| %>
    <div class="row">
      <table class="table table-bordered">
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name, size:"50" %></td>
        </tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, size:"50" %></td>
        </tr>
      </table>
    </div>
    <div class="row mb-2">
      <div class="col-lg-6 px-sm-0 offset-sm-1">
        <%= f.submit "変更を保存", class:"btn btn-success my-4" %>
      </div>
    </div>
  <% end %>
</div>