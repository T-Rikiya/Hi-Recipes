<table class="table table-hover table-inverse">
  <!--Userを検索した時 -->
  <% if @range == "User" %>
    <h3>Users search for "<%= @word %>"</h3>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--Recipeを検索した時 -->
    <h3>Recipes search for "<%= @word %>"</h3>
    <thead>
      <tr>
        <th></th>
        <th>タイトル</th>
        <th>概要</th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td></td>
          <td><%= link_to recipe.title,recipe, class: "recipe_#{recipe.id}" %></td>
          <td><%= recipe.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>