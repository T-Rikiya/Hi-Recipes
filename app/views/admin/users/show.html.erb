<div class="container">
  <h1><%=@user.name %>さんのユーザー情報</h1>
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th>ユーザーID</th>
          <td><%= @user.id %></td>
        </tr>        
        <tr>
          <th>ユーザー名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>              
            <% if @user.is_active == true %>
              <p class="text-success font-weight-bold">有効</p>
            <% else %>
              <p class="text-secondary">退会</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-6 px-sm-0 offset-sm-1">
      <%= link_to "編集する", edit_admin_user_path(@user.id), class:"btn btn-success my-1 mx-4 px-4" %>
    </div>
  </div>
  <h1>コメント一覧</h1>
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th>コメント内容</th>
        </tr>
        <% @recipe.recipe_comments.each do |recipe_comment| %>
          <tr>
            <td><%= recipe_comment.comment %></td>
            <td><%= link_to "削除", admin_recipe_comment_path(recipe_comment.recipe, recipe_comment), method: :delete %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

