<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @user.name%>さんのユーザー情報編集</h2>
    </div>
  </div>
  <%= form_with model: @user, url:admin_user_path, local:true do |f| %>
    <div class="row">
      <table class="table table-bordered">
        <tr>
          <th>ユーザーID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name %></td>
        </tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "有効" %>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "退会" %>
          </td>
        </tr>
      </table>
    </div>
    <div class="row mb-2">
      <div class="col-lg-6 px-sm-0 offset-sm-1">
        <%= f.submit "変更を保存", class:"btn btn-success my-4" %>
      </div>
    </div>
  <% end %>
</div>